# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (Supabase handles this)
DATABASE_URL=postgresql://username:password@localhost:5432/opengrains
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-PLACEHOLDER_REPLACE_WITH_YOUR_KEY
OPENAI_MODEL=gpt-4-vision-preview

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Romanian Validation Settings
ENABLE_ROMANIAN_VALIDATION=true
IBAN_VALIDATION_STRICT=true

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Supabase Storage
SUPABASE_STORAGE_BUCKET=documents